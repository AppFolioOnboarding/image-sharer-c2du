<p id="notice"><%= notice %></p>

<h1>Images</h1>

<%= link_to 'New Image', new_image_path %>

<% @images.each do |image| %>
  <p>
    <strong>Url:</strong>
    <%= image.url %>
    <br>
    <%= image_tag image.url, :class => 'max_image' %>
    <br>
    <p><h2>Tags:</h2>
      <% image.tag_list.each do |tag| %>
        <span class="js-tag"><%= tag %></span>
        <br>
      <% end %>
    </p>
  </p>
<% end %>
